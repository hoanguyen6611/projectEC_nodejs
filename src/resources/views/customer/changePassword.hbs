<div class="form-signup">
    <div class="changepassword text-center">
        <img src="https://res.cloudinary.com/dxd5emviu/image/upload/v1636260329/249000531_905697440068131_6669106597424658124_n_fbahjd.jpg"
            alt="" class="icon-logo">
        <h3 class="text-color text-center mt-5">Thay đổi mật khẩu</h3>
        {{#if message}}
        <div style="text-align: center" class="alert alert-{{message.type}}">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>{{message.intro}}</strong> {{message.message}}
        </div>
        {{/if}}
        <form method="post" class="mt-4" action="/customer/{{id}}/checkResetPassword" id="accept">
            <div class="form-group">
                <input type="password" class="form-control" name="currentPassword" placeholder="Mật khẩu hiện tại">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="newPassword_1" placeholder="Mật khẩu mới">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="newPassword_2" placeholder="Nhập lại mật khẩu mới">
            </div>
        </form>
        <form method="get" class="mt-4" action="/customer/myAccount" id="cancel"></form>
        <button type="submit" class="btn btn-dark" form="accept">Xác nhận</button>
        <input class="btn" name="action" onclick="history.back()" type="submit" value="Hủy bỏ"/>
    </div>
</div>